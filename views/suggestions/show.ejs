      >
      <button id="buttons" class="btn" type="submit">
        Suggest <%= suggestion.passive ? 'aggresively ğŸ˜¤' : 'passively ğŸ¥º' %>
      </button>
    </form>
    <% } %>
    <% if (suggestion.owner.equals(user?.profile._id)) { %>
      <a href="/suggestions/<%= suggestion._id %>/edit">
        <button id="buttons" class="btn"> Edit this Suggestion ğŸ—ï¸</button>
      </a>
      </form>
      <% } %>
    </div>
  <h2>Comments:</h2>  
    <ul>
      <% suggestion.comments?.forEach(comment => { %>
        <li>
          <%= comment.content %> - <%= comment.author.name %>
        </li>
        <% }) %>
      </ul>
  <% if (user) { %>
    <h3>Add a comment</h3>
    <form action="/suggestions/<%= suggestion._id %>/comments" method="POST">
    <textarea name="content" ></textarea><br>
    <button>Add Comment</button>
  </form>
  <% } %>
</section>

