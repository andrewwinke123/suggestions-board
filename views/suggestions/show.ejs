      <button id="buttons" class="delete-button" type="submit">Delete</button>
    </form>
    <% } %>
  </h3>
  <p id="passive-identifier"><%= suggestion.passive ? 'passive ğŸ¥º' : 'passive aggresive ğŸ˜«' %></p>
  <div class="button-container">
