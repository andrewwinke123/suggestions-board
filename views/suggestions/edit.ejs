<section>
  <h1>Edit the Suggestion! 🏗️</h1>
  <form action="/suggestions/<%= suggestion._id %>?_method=PUT" method="POST">
    <label>
      <textarea type="text" name="name" autocomplete="off" cols="30" rows="5"value="<%= suggestion.name %>" 
        autocomplete="off"><%= suggestion.name %></textarea>
    </label>
    <button id="edit-button" class="btn" type="submit">Edit</button>
    <br>  
    <label 
        for="myRange">Passive</label>
        <input type="range" min="1" max="100" value="50" class="slider" id="myRange" name="passive">Aggressive
    </label>    
  </form>
</section>

