<%- include('../partials/nav') %>

<section>
  <h1>Edit the Suggestion! 🏗️</h1>
  <form action="/suggestions/<%= suggestion._id %>?_method=PUT" method="POST">
    <label>
      Name: 
      <input 
        type="text"
        name="name" 
        value="<%= suggestion.name %>" 
        autocomplete="off"
      >
    </label>
    <label>
      Passive?
      <input 
        type="checkbox" 
        name="passive" 
				<%= taco.tasty ? "checked" : "" %> 
      >
    </label>
    <button type="submit">Edit the suggetion</button>
  </form>
</section>

